<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2"> 
    <h3>Create a New Listing </h3><br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="from-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">
                Title look good!
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="from-label">Description</label>
            <textarea name="listing[description]"  class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please enter a short description.
            </div>
        </div>   

        <div class="mb-3">
            <label for="image" class="from-label">Upload Listing Image</label>
            <input name="listing[image]"  type="file" class="form-control" required>
        </div>  
        
        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="from-label">Price</label>
                <input name="listing[price]" placeholder="1200"  class="form-control" required>
                <div class="invalid-feedback">
                    Please enter a validate Price.
                </div>
            </div>  
           
            <div class="mb-3 col-md-8">
                <label for="country" class="from-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Enter a valid and recognized country name.
                </div>
            </div> 
    
        </div>

        
        <div class="mb-3">
            <label for="location" class="from-label">Mumbai,Maharashtra</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter a valid and precise location.
            </div>
        </div> 
        
        <button class="btn btn-dark add-btn mb-3" >Add</button>
        
    </form>
</div>
</div>
</body>
