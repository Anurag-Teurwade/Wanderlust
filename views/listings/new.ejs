<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">
          <h2 class="text-center text-success fw-bold mb-5">Create a New Listing</h2>
          
          <form method="POST" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>
            <!-- Title -->
            <div class="mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input name="listing[title]" type="text" class="form-control form-control-lg" placeholder="Add a catchy title" required />
              <div class="valid-feedback">Title looks good!</div>
            </div>

            <!-- Description -->
            <div class="mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea name="listing[description]" class="form-control" rows="5" placeholder="Write a short description..." required></textarea>
              <div class="invalid-feedback">Enter a short description</div>
            </div>

            <!-- Image Upload -->
            <div class="mb-4">
              <label for="image" class="form-label fw-semibold">Upload Image</label>
              <input name="listing[image]" type="file" class="form-control" />
            </div>

            <!-- Category -->
            <div class="mb-4">
              <label for="category" class="form-label fw-semibold">Choose Category</label>
              <div class="form-text mb-2"><strong>Single choose:</strong> Click once</div>
              <select id="category" name="listing[category]" class="form-select" required>
                <option disabled selected>Select a category</option>
                <% ["Beachfront", "Cabins", "OMG", "Lake", "Design", "Amazing Pools", "Farms", "Amazing Views", "Rooms", "Lakefront", "Tiny Homes", "Countryside", "Treehouse", "Trending", "Tropical", "National Parks", "Casties", "Camping", "Top Of The World", "Luxe", "Iconic Cities", "Earth Homes"].forEach(cat => { %>
                  <option value="<%= cat %>"><%= cat %></option>
                <% }) %>
              </select>
              <div class="invalid-feedback">Choose a category</div>
            </div>

            <!-- Price & Country -->
            <div class="row g-4">
              <div class="col-md-6">
                <label for="price" class="form-label fw-semibold">Price</label>
                <input name="listing[price]" class="form-control" placeholder="Ex: 4300/-" required />
                <div class="invalid-feedback">Please enter a valid price</div>
              </div>

              <div class="col-md-6">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input name="listing[country]" type="text" class="form-control" placeholder="Ex: India" required />
                <div class="invalid-feedback">Please enter the country name</div>
              </div>
            </div>

            <!-- Location -->
            <div class="mt-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input name="listing[location]" type="text" class="form-control" placeholder="Ex: Delhi" required />
              <div class="invalid-feedback">Please enter a valid location</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mt-5">
              <button type="submit" class="btn btn-success btn-lg fw-semibold shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Add Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/script.js"></script>
