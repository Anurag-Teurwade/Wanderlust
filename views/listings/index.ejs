
  <% layout("/layouts/boilerplate") %>
  <style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
   display: none;
  }
  .tax-toggle {
   border:  1px solid black;
   border-radius: 1rem;
   height: 3.2rem;
   padding: 1rem;
   display: flex;
   align-items: center;

  }
  /* Swiper Container */
.swiper-container {
   width: 100%;
   position: relative;
   overflow: hidden;
   padding-bottom: 20px;
}

/* Slide (icon) */
.swiper-slide {
   display: flex;
   flex-direction: column;
   align-items: center;
   text-align: center;
}

/* Arrow buttons */
.swiper-button-next,
.swiper-button-prev {
   width: 40px;
   height: 40px;
   background-color: rgba(0, 0, 0, 0.7);  /* Semi-transparent circle */
   border-radius: 50%;                     /* Circle shape */
   color: white;
   display: flex;
   align-items: center;
   justify-content: center;
   position: absolute;
   top: 50%;
   transform: translateY(-50%);
   z-index: 10;
   transition: opacity 0.3s ease, background-color 0.3s ease;
   cursor: pointer;
   opacity: 0.7;                           /* Slight transparency */
}

/* Left and right arrow positioning */
.swiper-button-next {
   right: 10px;
}

.swiper-button-prev {
   left: 10px;
}

/* Hover effect */
.swiper-button-next:hover,
.swiper-button-prev:hover {
   background-color: rgba(0, 0, 0, 0.9);   /* Darker on hover */
   opacity: 1;                             /* Fully visible */
}

  </style> 
  
  <body>
    
